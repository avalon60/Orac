# ┌────────────────────────────────────────────────────────┐
# │ Orac Environment Configuration                         │
# │ Place this file at: resources/config/orac.env          │
# │ Load via: source resources/config/orac.env             │
# └────────────────────────────────────────────────────────┘

# -----------------------------------------------------------------------------
# Oracle Database Container Settings
# -----------------------------------------------------------------------------

# Name of the Docker container for Oracle DB + ORDS
export CONTAINER_NAME=orac-db

# Oracle Docker image tag (used with container-registry.oracle.com)
export IMAGE_TAG=oracdb-img

# Host directory to persist Oracle data files
export ORADATA_DIR=/u01/orac-db/oradata

# Local image built from Dockerfile under ORA_DOCKER_DIR
export ORAC_IMAGE_NAME=orac
export ORAC_IMAGE_TAG=latest

# -----------------------------------------------------------------------------
# Port Mappings
# -----------------------------------------------------------------------------

# SQL*Net listener port on host (maps to 1521 inside container)
export PORT_SQLNET=1521

# ORDS/HTTP port on host (maps to 8080 inside container)
export PORT_HTTP=8042  # The meaning of life 😉

# Enterprise Manager port on host (maps to 5500 inside container)
export PORT_EM=5500

